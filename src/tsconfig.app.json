{
  // "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    // "module": "es2022",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "./src/**"
      ]
    }
  }
}